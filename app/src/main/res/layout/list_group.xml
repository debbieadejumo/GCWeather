<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F3474">

    <TextView
        android:id="@+id/listHeader"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="TOMORROW"
        android:textAllCaps="true"
        app:layout_constraintEnd_toStartOf="@+id/listHeaderImage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-4dp" />

    <ImageView
        android:id="@+id/listHeaderImage"
        android:layout_width="126dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/listHeader"
        app:layout_constraintEnd_toStartOf="@+id/listHeaderWeather"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listHeader"
        app:layout_constraintTop_toTopOf="@+id/listHeader"
        app:srcCompat="@drawable/sunny" />

    <TextView
        android:id="@+id/listHeaderWeather"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="20 / 35"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/listHeaderImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listHeaderImage"
        app:layout_constraintTop_toTopOf="@+id/listHeaderImage" />
</android.support.constraint.ConstraintLayout>